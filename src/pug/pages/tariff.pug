block variables
  - var title       = 'Оплата | Fibernet'
  - var description = ''

block content
  .main-wrap.no-js
    include ../sections/header

    //begin content
    main.main.tariff
      .index-particles#index-particles

      .container
        h1.title Тарифы
        h2.tariff__title Безлимитный Интернет

      .tariff__slider-wrap
        //begin tariff__slider
        ul.tariff__slider.tariff-slider
          +tariff-slider__item('Старт-50М', 'active')
          +tariff-slider__item('Циклон-80М', '')
          +tariff-slider__item-tooltip('Протон-100М', '')
          +tariff-slider__item('Энергия-200М', '')
          +tariff-slider__item('Энергия-200М', '')
        //end tariff__slider

      .container
        //begin tariff__accordion
        .tariff__accordion.tariff-accordion
          +tariff-accordion__row('Подключение')
          +tariff-accordion__row('Характеристики сети')
        //end tariff__accordion

        h2.tariff__title Телевидение <a href='video.html'>«Смотрёшка»</a>

      .tariff__slider-wrap
        //begin tariff__slider
        ul.tariff__slider.tariff-slider
          +tariff-slider__item-2('Стандарт', '')
          +tariff-slider__item-2('Оптима', 'active')
          +tariff-slider__item-2('Эксклюзив', '')
          +tariff-slider__item-2('Эксклюзив +', '')
        //end tariff__slider

      .container
        h2.tariff__title Местная телефония

      .tariff__slider-wrap
        //begin tariff__slider
        ul.tariff__slider.tariff-slider
          +tariff-slider__item-3-tooltip('Безлимитный', '')
          +tariff-slider__item-3('Повременный', '')
          +tariff-slider__item-3('Комбинированный-100', '')
          +tariff-slider__item-3('Комбинированный-100', '')
        //end tariff__slider

      .container
        //begin tariff__accordion
        .tariff__accordion.tariff-accordion
          +tariff-accordion__row('Мобильные и межгород')
          +tariff-accordion__row('Подключение')
        //end tariff__accordion

        //begin tariff__order
        .tariff__order.tariff-order
          //begin tariff-order__left
          .tariff-order__left
            //begin tariff-order__row
            .tariff-order__row
              .tariff-order__label Безлимитный интернет:
              .tariff-order__td Тариф «Старт-50М»
              .tariff-order__td 180 ₽/мес.
            //end tariff-order__row
            //begin tariff-order__row
            .tariff-order__row
              .tariff-order__label Телевидение «Смотрёшка»:
              .tariff-order__td Тариф «Оптима»
              .tariff-order__td 449 ₽/мес.
            //end tariff-order__row
            //begin tariff-order__row
            .tariff-order__row
              .tariff-order__label Местная телефония
              .tariff-order__td Тариф «Комбинированный-400»
              .tariff-order__td 250 ₽/мес.
            //end tariff-order__row
            //begin tariff-order__row-total
            .tariff-order__row-total
              .tariff-order__td-total Итого
              .tariff-order__td-total
                span.tariff-order__td-total-num 879
                =' '
                i ₽/мес.*
                .tooltip
                  +svg('question')
                  .tooltip__text.tooltip__text--center
                    span Для более точного расчета<br>с Вами свяжется наш оператор
            //end tariff-order__row-total
          //end tariff-order__left

          include ../elements/form-sm
        //end tariff__order

      include ../elements/popup
      include ../sections/footer
    //end content

    include ../sections/scripts
